<%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>

<h1>
  <strong>Title:</strong>
  <%= @portfolio_item.title %>
</h1>

<em>
  <strong>Subtitle:</strong>
  <%= @portfolio_item.subtitle %>
</em>

<p>
  <strong>Body:</strong>
  <%= @portfolio_item.body %>
</p>

<h2>Technologies Used</h2>
<ul>
  <% @portfolio_item.technologies.each do |technology| %>
    <li><%= technology.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> |
<%= link_to 'Delete', @portfolio_item, method: :delete, data: {confirm: "Are you sure?"} if logged_in?(:site_admin) %> |

<%= link_to 'Back', portfolios_path %>





