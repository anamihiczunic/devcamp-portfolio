<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image_url, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1>
        <strong>Title:</strong>
        <%= @portfolio_item.title %>
      </h1>
      <hr>
      <em>
        <strong>Subtitle:</strong>
        <%= @portfolio_item.subtitle %>
      </em>

      <p>
        <strong>Body:</strong>
        <%= @portfolio_item.body %>
      </p>

      <h3>Technologies Used</h3>

      <% @portfolio_item.technologies.each do |technology| %>
        <li><%= technology.name %></li>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to 'Edit Item', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>








