<aside class="col-md-4 blog-sidebar">
  <div class="p-4 mb-3 bg-light rounded">
    <h4 class="font-italic">About</h4>
    <p class="mb-0">I am a beginner web developer. </p>
  </div>

  <div class="p-4 mb-3 bg-light rounded">
    <h4>Topics</h4>
    <% @side_bar_topics.each do |topic| %>
      <%= link_to topic.title, topic_path(topic), class: "form-control" %>
    <% end %>
  </div>

  <div class="p-4">
    <h4 class="font-italic">Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="#"><%= fa_icon 'github' %></a></li>
      <li><a href="#"><%= fa_icon 'facebook' %></a></li>
      <li><a href="#"><%= fa_icon 'twitter' %></a></li>
      <li><a href="#"><%= fa_icon 'instagram' %></a></li>
    </ol>
  </div>
</aside>